
@{
    ViewBag.Title = "Add new tutorial";
}
<div class="row">
    <div class="col-lg-9 col-md-9 col-sm-12">
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Add New Tutorial</h3>
                        </div>
                        <form role="form" id="frmTutorial">
                            <div class="box-body">
                                <div class="form-group">
                                    <label>Title <strong><span class="required"></span></strong></label>
                                    <input type="text" class="form-control form-element validation" id="Title" name="Title" placeholder="Enter tutorial title">
                                </div>
                                <div class="form-group">
                                    <label>Tutorial Meta <strong><span class="required"></span></strong></label>

                                    <select class="form-control select2" id="Meta" multiple="multiple" data-placeholder="Select a State">
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Description <strong><span class="required"></span></strong></label>
                                    <textarea class="form-control form-element validation" style="min-height:800px" id="Description" name="Description"></textarea>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <button type="button" id="btnSave" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-12">
        <section class="content">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">Your Stats</h3>
                        </div>
                        <form role="form">
                            <div class="box-body">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <section class="content">
            <div class="row">
                <div id="userWiseTutorialList"></div>
            </div>
        </section>
    </div>
</div>

@section scripts{
    <script src="~/JQuery/PageJs/Tutorial.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            Tutorial.init();
        });
    </script>

}


